<h1>Detalle del Producto</h1>

<div style="border: 1px solid #ccc; padding: 20px; width: 400px;">
  <h2>{{product.title}}</h2>
  <p><strong>Descripción:</strong> {{product.description}}</p>
  <p><strong>Código:</strong> {{product.code}}</p>
  <p><strong>Precio:</strong> ${{product.price}}</p>
  <p><strong>Stock:</strong> {{product.stock}}</p>
  <p><strong>Categoría:</strong> {{product.category}}</p>
  {{#if product.thumbnails.[0]}}
    <img src="{{product.thumbnails.[0]}}" alt="{{product.title}}" style="max-width: 100%;">
  {{/if}}
  <p><strong>Estado:</strong> 
    {{#if product.status}}Disponible{{else}}No disponible{{/if}}
  </p>
</div>

<button 
  class="add-to-cart-btn" 
  data-pid="{{product._id}}" 
  data-cid="{{cid}}">
  Agregar al carrito
</button>

<br><br>
<a href="/">Volver al Home</a>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/addToCart.js"></script>
